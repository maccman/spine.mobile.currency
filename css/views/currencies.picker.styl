.currenciesPicker
  font-size: 1.5em
  
  header
    position: relative
    background: #FFF
    border-bottom: 0.1em solid #ddd
    overflow: hidden
    
    h2
      text-align: center
      font-size: 1.3em;
      font-family: "Helvetica Neue", sans-serif
      margin: 10px 0
      
    button
      // -webkit-box-shadow: inset 0 -1px 1px rgba(0, 0, 0, 0.3), inset 0 1px 1px 0 rgba(0, 0, 0, 0.4)
      margin: 0.6em
      font-size: 1em
      position: absolute
      left: 0
      top: 0      
      
  article
    background: #f0f0f0
    
    &:empty:after
      content: "Loading..."
      display: block
      text-align: center
      margin: 3em 0
    
    .item
      padding: 0.7em 0.5em
      border-bottom: 0.1em solid #ddd
      cursor: pointer
      
      hbox()
            
      &:active
        background-color: rgba(0, 255, 0, 0.2)
        
      span
        display: block
        box-flex(1)
        ellipsis()
    
      em
        margin: 0 0 0 0.7em
        display: block
        color: #bbb
        display: block